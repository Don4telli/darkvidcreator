{
  "version": 2,
  "buildCommand": "./build.sh",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "PIP_CONSTRAINT": "constraints.txt"
  },
  "functions": {
    "api/app.py": {
      "runtime": "python3.9",
      "maxDuration": 300,
      "includeFiles": "core/**"
    }
  }
}